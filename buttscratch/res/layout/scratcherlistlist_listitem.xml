<?xml version="1.0" encoding="utf-8"?>
<!-- This linear layout encapsulates a single scratcher db entry (scratcher #1) -->

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/scratcherlistlist_listitem"
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="#fefefe"
	android:layout_weight="0.2"
	android:paddingLeft="5dp" 
	android:paddingRight="5dp" 
	android:paddingTop="5dp" 
	android:paddingBottom="5dp" >
		
	<!-- This TextView is the label for scratcher entry #1 -->
	<TextView
		android:id="@+id/scratcherlistlist_item_scratchername"
		android:text="Scratcher Type #999"
		android:textColor="#000000"
		android:textSize="16sp"
		android:gravity="left"
		android:layout_weight="0.5"
		android:background="#fefefe"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"/>
		
	<!-- This linear layout encapsulates a scratcher's icons -->
	
	<LinearLayout
		android:id="@+id/scratcherlistlist_item_icon_ll"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:gravity="center"
		android:layout_height="wrap_content"
		android:layout_weight="0.5"
		android:paddingLeft="5dp" 
		android:paddingRight="5dp" 
		android:paddingTop="5dp" 
		android:paddingBottom="5dp" >
		<ImageView
		android:id="@+id/scratcherlistlist_item_icon_warning"
		android:src="@drawable/exclamation_small"
		android:layout_height="25dp"
		android:layout_width="wrap_content"
		android:gravity="left" />
		<ImageView
		android:id="@+id/scratcherlistlist_item_icon_overall_odds"
		android:src="@drawable/yellow_minus"
		android:layout_height="25dp"
		android:layout_width="wrap_content"
		android:gravity="center_horizontal"/>
		<ImageView
		android:id="@+id/scratcherlistlist_item_icon_jackpot_odds"
		android:src="@drawable/twobags_money"
		android:layout_height="25dp"
		android:layout_width="wrap_content"
		android:gravity="right" />
 	</LinearLayout> <!-- End single scratcher icons entry -->
 	
 	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:id="@+id/scratcherlistlist_listitem"
		  android:orientation="vertical"
		  android:layout_width="fill_parent"
		android:layout_height="2dp"
	  	android:background="#000000"
		android:layout_weight="0.2"
		android:paddingLeft="15dp" 
		android:paddingRight="15dp" 
		android:paddingTop="20dp" 
		android:paddingBottom="20dp">
	</LinearLayout>
 	

</LinearLayout> <!-- End scratcher #1 entry -->

	
